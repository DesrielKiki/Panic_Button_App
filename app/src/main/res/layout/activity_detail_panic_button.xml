<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.panicButton.DetailPanicButtonActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/bg_appbar"
        app:cardBackgroundColor="#000000"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/detail_panic_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:navigationIcon="@drawable/ic_back"
                app:title="Detail Panic Button"
                app:titleCentered="true" />
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_24sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/iv_Maps"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_223sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_map" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_status"
                    style="@style/poppins10SemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_online"
                    android:drawablePadding="@dimen/_8sdp"
                    android:text="Online" />

                <TextView
                    android:id="@+id/tv_recent_status"
                    style="@style/poppins10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_32sdp"
                    android:drawableLeft="@drawable/ic_recent"
                    android:drawablePadding="@dimen/_8sdp"
                    android:text="Terakhir Diperbarui"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/tv_recent"
                    style="@style/poppins10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:text="15:00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/poppins10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Panic Button"
                        android:textColor="@color/grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp">

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/poppins12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Toko Can Creative" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="64dp"
                            android:src="@drawable/ic_edit" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/poppins10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:textColor="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/poppins10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kecamatan"
                                android:textColor="@color/grey" />

                            <TextView
                                android:id="@+id/tv_kecamatan"
                                style="@style/poppins12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:text="Bulu Lor" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="64dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/poppins10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kelurahan"
                                android:textColor="@color/grey" />

                            <TextView
                                android:id="@+id/tv_kelurahan"
                                style="@style/poppins12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:text="Semarang Utara" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/poppins10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Jalan"
                            android:textColor="@color/grey" />

                        <TextView
                            android:id="@+id/tv_namaJalan"
                            style="@style/poppins12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Jl. Sentyaki Raya No.7" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/poppins10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informasi Panic Button"
                        android:textColor="@color/grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/poppins10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waktu Pemasangan"
                            android:textColor="@color/grey" />

                        <TextView
                            android:id="@+id/tv_waktuPemasangan"
                            style="@style/poppins12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="15 Agustus 2023" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/_124sdp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:orientation="vertical">

                            <TextView
                                style="@style/poppins10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Waktu Maintenance Terakhir"
                                android:textColor="@color/grey" />

                            <TextView
                                android:id="@+id/tv_recentMaintenance"
                                style="@style/poppins12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="15 September 2023" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bg_nexmaintn"
                            android:layout_width="@dimen/_124sdp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:orientation="vertical">

                            <TextView
                                style="@style/poppins10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Waktu Maintenance Berikutnya"
                                android:textColor="@color/grey" />

                            <TextView
                                android:id="@+id/tv_nextMaintenance"

                                style="@style/poppins12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="15 Oktober 2023" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        style="@style/poppins10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Paket Panic Button"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/tv_paketPanic"
                        style="@style/poppins12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paket Bulanan" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/btn_gradient_red"
                    android:drawableLeft="@drawable/ic_chat"
                    android:text="Bantuan"
                    app:backgroundTint="@null"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>