<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.edit.EditActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/edit_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/edit_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Ubah Email"
            app:navigationIcon="@drawable/ic_back"
            app:titleCentered="true"/>
    </com.google.android.material.appbar.AppBarLayout>
    <EditText
        android:id="@+id/et_edit"
        android:layout_width="wrap_content"
        android:hint="Email Baru"
        android:inputType="number"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_below="@id/edit_appbar"
        android:drawableStart="@drawable/ic_email"
        android:drawableTint="@color/grey"
        android:paddingStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:drawablePadding="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:background="@drawable/bg_edit_text"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_below="@id/et_edit"
        android:text="Selanjutnya"
        android:layout_marginTop="@dimen/_18sdp"
        android:background="@drawable/bg_button_red"
        app:backgroundTint="@color/red"
        android:layout_marginEnd="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_24sdp"/>


</RelativeLayout>